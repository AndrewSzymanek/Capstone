@model IEnumerable<Capstone.Models.Client>
@{
    ViewBag.Title = "ChooseClient";
}

<h2>Choose Client</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Client</h4>
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, "Client Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("LastName", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rate" class="btn btn-default" />
        </div>
    </div>

</div>
}